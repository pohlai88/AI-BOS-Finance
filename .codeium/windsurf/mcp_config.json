{
  "mcpServers": {
    "Figma": {
      "command": "npx",
      "args": [
        "--no-install",
        "-y",
        "mcp-remote",
        "https://mcp.figma.com/mcp",
        "--static-oauth-client-metadata",
        "@d:\\AI-BOS-Finance\\.codeium\\windsurf\\figma_oauth_client_metadata.json"
      ]
    },
    "shadcn": {
      "command": "npx",
      "args": [
        "--no-install",
        "-y",
        "shadcn",
        "mcp"
      ]
    },
    "shadcn-community": {
      "command": "npx",
      "args": [
        "--no-install",
        "-y",
        "mcp-remote",
        "https://www.shadcn.io/api/mcp"
      ]
    },
    "supabase": {
      "command": "npx",
      "args": [
        "--no-install",
        "-y",
        "mcp-remote",
        "https://mcp.supabase.com/mcp?project_ref=cnlutbuzjqtuicngldak"
      ]
    },
    "vercel": {
      "command": "npx",
      "args": [
        "--no-install",
        "-y",
        "mcp-remote",
        "https://mcp.vercel.com"
      ]
    },
    "github": {
      "command": "npx",
      "args": [
        "--no-install",
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
      }
    },
    "next-devtools": {
      "command": "npx",
      "args": [
        "--no-install",
        "-y",
        "next-devtools-mcp"
      ],
      "env": {
        "NEXT_MCP_WATCH": "true",
        "NEXT_MCP_TRACK_CHANGES": "true",
        "NEXT_MCP_LOG_UPDATES": "true"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "D:\\AI-BOS-Finance\\.codeium\\windsurf"
      ]
    },
    "finance-canon": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "D:\\AI-BOS-Finance"
      ]
    }
  }
}